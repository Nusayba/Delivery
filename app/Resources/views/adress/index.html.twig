{% extends 'base.html.twig' %}

{% block body %}
    <h1>Adresses list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Type</th>
                <th>Firstname</th>
                <th>Lastname</th>
                <th>Number</th>
                <th>Street</th>
                <th>Zipcode</th>
                <th>Country</th>
                <th>City</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for adress in adresses %}
            <tr>
                <td><a href="{{ path('adress_show', { 'id': adress.id }) }}">{{ adress.id }}</a></td>
                <td>{{ adress.type }}</td>
                <td>{{ adress.firstName }}</td>
                <td>{{ adress.lastName }}</td>
                <td>{{ adress.number }}</td>
                <td>{{ adress.street }}</td>
                <td>{{ adress.zipCode }}</td>
                <td>{{ adress.country }}</td>
                <td>{{ adress.city }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('adress_show', { 'id': adress.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('adress_edit', { 'id': adress.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('adress_new') }}">Create a new adress</a>
        </li>
    </ul>
{% endblock %}
